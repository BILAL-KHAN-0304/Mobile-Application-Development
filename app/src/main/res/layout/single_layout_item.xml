<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/singleRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <TextView
            android:id="@+id/stdName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:text="Name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/regNo"
            android:layout_width="96dp"
            android:layout_height="30dp"
            android:layout_below="@+id/stdName"
            android:layout_alignStart="@+id/stdName"
            android:layout_alignLeft="@+id/stdName"
            android:layout_marginStart="85dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="-28dp"
            android:maxLines="1"
            android:text="Reg No"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="96dp"
            android:layout_height="30dp"
            android:layout_below="@+id/stdName"
            android:layout_alignStart="@+id/stdName"
            android:layout_alignLeft="@+id/stdName"
            android:layout_marginStart="198dp"
            android:layout_marginLeft="198dp"
            android:layout_marginTop="-27dp"
            android:maxLines="1"
            android:text="Contact"
            android:textSize="20sp" />

        <Button
            android:id="@+id/smsBtn"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/contact"
            android:text="SMS" />

    </RelativeLayout>

    <View
        android:layout_below="@+id/singleRow"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />

</RelativeLayout>